@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=DM+Sans:wght@400;500;600;700&display=swap');

:root {
  --navy-dark: #0a0e1a;
  --navy: #0f1629;
  --navy-light: #1a2035;
  --navy-lighter: #252d47;
  --lavender: #a78bfa;
  --lavender-soft: rgba(167, 139, 250, 0.15);
  --lavender-glow: rgba(167, 139, 250, 0.3);
  --teal: #5eead4;
  --teal-soft: rgba(94, 234, 212, 0.15);
  --pink: #f9a8d4;
  --pink-soft: rgba(249, 168, 212, 0.15);
  --orange: #fdba74;
  --orange-soft: rgba(253, 186, 116, 0.15);
  --purple: #c4b5fd;
  --purple-soft: rgba(196, 181, 253, 0.15);
  --yellow: #fde68a;
  --yellow-soft: rgba(253, 230, 138, 0.15);
  --magenta: #e879f9;
  --cyan: #22d3ee;
  --lime: #a3e635;
  --red: #fb7185;
  --text-primary: #ffffff;
  --text-secondary: rgba(255, 255, 255, 0.7);
  --text-muted: rgba(255, 255, 255, 0.5);
  --border-subtle: rgba(255, 255, 255, 0.08);
  --border-light: rgba(255, 255, 255, 0.12);
  --card-bg: rgba(255, 255, 255, 0.03);
  --card-hover: rgba(255, 255, 255, 0.06);
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
}

body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  background: var(--navy-dark);
  color: var(--text-primary);
  line-height: 1.6;
  overflow-x: hidden;
}

/* Animated Background Particles */
body::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 80%, rgba(167, 139, 250, 0.15) 0%, transparent 40%),
    radial-gradient(circle at 80% 20%, rgba(232, 121, 249, 0.12) 0%, transparent 40%),
    radial-gradient(circle at 50% 50%, rgba(94, 234, 212, 0.08) 0%, transparent 50%);
  pointer-events: none;
  z-index: -1;
  animation: bgPulse 8s ease-in-out infinite;
}

@keyframes bgPulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.6; }
}

/* Floating Sparkles Animation */
.sparkle {
  position: fixed;
  width: 4px;
  height: 4px;
  background: var(--lavender);
  border-radius: 50%;
  pointer-events: none;
  animation: sparkleFloat 15s linear infinite;
  box-shadow: 0 0 10px var(--lavender), 0 0 20px var(--lavender);
}

@keyframes sparkleFloat {
  0% {
    transform: translateY(100vh) rotate(0deg);
    opacity: 0;
  }
  10% {
    opacity: 1;
  }
  90% {
    opacity: 1;
  }
  100% {
    transform: translateY(-100vh) rotate(720deg);
    opacity: 0;
  }
}

/* Sparkle Particles Container */
.sparkles {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
  overflow: hidden;
}

.sparkle-particle {
  position: absolute;
  bottom: -10px;
  border-radius: 50%;
  animation: sparkleRise 15s linear infinite;
  opacity: 0;
}

@keyframes sparkleRise {
  0% {
    transform: translateY(0) rotate(0deg) scale(0);
    opacity: 0;
  }
  10% {
    opacity: 0.8;
    transform: translateY(-10vh) rotate(90deg) scale(1);
  }
  50% {
    opacity: 0.6;
  }
  90% {
    opacity: 0.3;
    transform: translateY(-90vh) rotate(360deg) scale(0.5);
  }
  100% {
    transform: translateY(-100vh) rotate(450deg) scale(0);
    opacity: 0;
  }
}

/* Scroll Animation Classes */
.step-card,
.feature-card,
.mood-card,
.testimonial-card {
  opacity: 0;
  transform: translateY(30px);
  transition: opacity 0.6s ease, transform 0.6s ease;
}

.step-card.animate-in,
.feature-card.animate-in,
.mood-card.animate-in,
.testimonial-card.animate-in {
  opacity: 1;
  transform: translateY(0);
}

/* Staggered animation delays */
.step-card:nth-child(1), .feature-card:nth-child(1), .mood-card:nth-child(1), .testimonial-card:nth-child(1) { transition-delay: 0s; }
.step-card:nth-child(2), .feature-card:nth-child(2), .mood-card:nth-child(2), .testimonial-card:nth-child(2) { transition-delay: 0.1s; }
.step-card:nth-child(3), .feature-card:nth-child(3), .mood-card:nth-child(3), .testimonial-card:nth-child(3) { transition-delay: 0.2s; }
.step-card:nth-child(4), .feature-card:nth-child(4), .mood-card:nth-child(4) { transition-delay: 0.3s; }
.mood-card:nth-child(5) { transition-delay: 0.4s; }
.mood-card:nth-child(6) { transition-delay: 0.5s; }
.mood-card:nth-child(7) { transition-delay: 0.6s; }
.mood-card:nth-child(8) { transition-delay: 0.7s; }
.mood-card:nth-child(9) { transition-delay: 0.8s; }
.mood-card:nth-child(10) { transition-delay: 0.9s; }
.mood-card:nth-child(11) { transition-delay: 1s; }
.mood-card:nth-child(12) { transition-delay: 1.1s; }

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 24px;
}

@media (min-width: 768px) {
  .container {
    padding: 0 40px;
  }
}

@media (min-width: 1280px) {
  .container {
    padding: 0 60px;
  }
}

/* Navbar */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  padding: 20px 0;
  transition: all 0.3s ease;
  background: transparent;
}

.navbar.scrolled {
  background: rgba(10, 14, 26, 0.95);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid var(--border-subtle);
  padding: 16px 0;
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.logo {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--text-primary);
  text-decoration: none;
  display: flex;
  align-items: center;
  gap: 10px;
}

.logo img {
  height: 32px;
}

.nav-links {
  display: none;
  gap: 32px;
  list-style: none;
}

@media (min-width: 768px) {
  .nav-links {
    display: flex;
  }
}

.nav-links a {
  color: var(--text-secondary);
  text-decoration: none;
  font-size: 0.9rem;
  font-weight: 500;
  transition: color 0.2s ease;
}

.nav-links a:hover {
  color: var(--text-primary);
}

.btn-download {
  background: var(--lavender);
  color: var(--navy-dark);
  padding: 10px 24px;
  border-radius: 8px;
  font-weight: 600;
  font-size: 0.9rem;
  text-decoration: none;
  transition: all 0.2s ease;
  display: none;
}

@media (min-width: 768px) {
  .btn-download {
    display: inline-block;
  }
}

.btn-download:hover {
  background: #b794f6;
  transform: translateY(-1px);
}

.mobile-menu-btn {
  display: flex;
  flex-direction: column;
  gap: 5px;
  background: none;
  border: none;
  cursor: pointer;
  padding: 8px;
}

@media (min-width: 768px) {
  .mobile-menu-btn {
    display: none;
  }
}

.mobile-menu-btn span {
  width: 24px;
  height: 2px;
  background: var(--text-primary);
  border-radius: 2px;
}

/* Hero Section */
.hero {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 120px 0 80px;
  background: linear-gradient(135deg, #0f0c29 0%, #302b63 50%, #24243e 100%);
  position: relative;
  overflow: hidden;
}

.hero::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: 
    radial-gradient(ellipse at 30% 20%, rgba(232, 121, 249, 0.2) 0%, transparent 40%),
    radial-gradient(ellipse at 70% 80%, rgba(167, 139, 250, 0.2) 0%, transparent 40%),
    radial-gradient(ellipse at 50% 50%, rgba(94, 234, 212, 0.1) 0%, transparent 50%);
  animation: heroGlow 10s ease-in-out infinite;
}

.hero::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 200px;
  background: linear-gradient(to top, rgba(232, 121, 249, 0.1) 0%, transparent 100%);
  animation: bottomGlow 4s ease-in-out infinite;
}

@keyframes heroGlow {
  0%, 100% { transform: translate(0, 0) scale(1); opacity: 1; }
  50% { transform: translate(-5%, 5%) scale(1.1); opacity: 0.7; }
}

@keyframes bottomGlow {
  0%, 100% { opacity: 0.5; }
  50% { opacity: 1; }
}

.hero-content {
  text-align: center;
  max-width: 800px;
  margin: 0 auto;
  position: relative;
  z-index: 1;
}

.hero h1 {
  font-size: clamp(2rem, 5vw, 3.5rem);
  font-weight: 600;
  line-height: 1.2;
  margin-bottom: 20px;
  letter-spacing: -0.02em;
  animation: fadeInUp 1s ease-out;
}

.hero h1 em {
  font-style: normal;
  background: linear-gradient(90deg, var(--lavender), var(--magenta), var(--cyan), var(--lavender));
  background-size: 300% 100%;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: gradientShift 4s ease-in-out infinite;
}

@keyframes gradientShift {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}

.hero-subtitle {
  color: var(--text-secondary);
  font-size: 1.1rem;
  max-width: 500px;
  margin: 0 auto 40px;
  line-height: 1.7;
}

.hero-phone {
  max-width: 280px;
  margin: 0 auto 40px;
  position: relative;
  animation: phoneFloat 6s ease-in-out infinite;
}

.hero-phone::before {
  content: '';
  position: absolute;
  inset: -20px;
  background: linear-gradient(135deg, var(--magenta), var(--lavender), var(--cyan));
  border-radius: 52px;
  opacity: 0.4;
  filter: blur(30px);
  animation: phoneGlow 3s ease-in-out infinite alternate;
  z-index: -1;
}

.hero-phone img {
  width: 100%;
  border-radius: 32px;
  box-shadow: 
    0 40px 80px rgba(0, 0, 0, 0.5), 
    0 0 60px rgba(232, 121, 249, 0.3),
    0 0 120px rgba(167, 139, 250, 0.2);
  border: 2px solid rgba(255, 255, 255, 0.1);
}

@keyframes phoneFloat {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-15px); }
}

@keyframes phoneGlow {
  0% { opacity: 0.3; transform: scale(1); }
  100% { opacity: 0.6; transform: scale(1.05); }
}

.hero-buttons {
  display: flex;
  gap: 16px;
  justify-content: center;
  flex-wrap: wrap;
}

.btn-primary {
  background: linear-gradient(135deg, var(--magenta), var(--lavender));
  color: white;
  padding: 14px 32px;
  border-radius: 12px;
  font-weight: 600;
  font-size: 1rem;
  text-decoration: none;
  transition: all 0.3s ease;
  border: none;
  cursor: pointer;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(232, 121, 249, 0.4);
}

.btn-primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  transition: left 0.5s ease;
}

.btn-primary:hover::before {
  left: 100%;
}

.btn-primary:hover {
  transform: translateY(-3px) scale(1.02);
  box-shadow: 
    0 10px 40px rgba(232, 121, 249, 0.5),
    0 0 20px rgba(167, 139, 250, 0.3);
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.05);
  color: var(--text-primary);
  padding: 14px 32px;
  border-radius: 12px;
  font-weight: 600;
  font-size: 1rem;
  text-decoration: none;
  border: 1px solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
  cursor: pointer;
  backdrop-filter: blur(10px);
}

.btn-secondary:hover {
  background: rgba(255, 255, 255, 0.1);
  border-color: var(--lavender);
  box-shadow: 0 0 20px rgba(167, 139, 250, 0.2);
  transform: translateY(-2px);
}

.hero-platforms {
  margin-top: 24px;
  color: var(--text-muted);
  font-size: 0.85rem;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12px;
}

.hero-platforms svg {
  width: 20px;
  height: 20px;
  opacity: 0.6;
}

/* Section Base */
section {
  padding: 100px 0;
}

.section-label {
  font-size: 0.85rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  margin-bottom: 16px;
  background: linear-gradient(90deg, var(--magenta), var(--lavender), var(--cyan));
  background-size: 200% 100%;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: labelGradient 3s ease-in-out infinite;
}

@keyframes labelGradient {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}

.section-title {
  font-size: clamp(1.8rem, 4vw, 2.5rem);
  font-weight: 600;
  margin-bottom: 16px;
  letter-spacing: -0.02em;
}

.section-subtitle {
  color: var(--text-secondary);
  font-size: 1rem;
  max-width: 600px;
}

.section-header {
  text-align: center;
  margin-bottom: 60px;
}

.section-header .section-subtitle {
  margin: 0 auto;
}

/* How It Works */
.how-it-works {
  background: linear-gradient(180deg, #1a1040 0%, #2d1f5c 50%, #1a1040 100%);
  position: relative;
  overflow: hidden;
}

.how-it-works::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: linear-gradient(90deg, transparent, var(--magenta), var(--lavender), var(--cyan), transparent);
}

.how-it-works::after {
  content: '';
  position: absolute;
  inset: 0;
  background: 
    radial-gradient(circle at 10% 30%, rgba(232, 121, 249, 0.1) 0%, transparent 30%),
    radial-gradient(circle at 90% 70%, rgba(167, 139, 250, 0.1) 0%, transparent 30%);
  pointer-events: none;
}

.steps-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 24px;
}

@media (min-width: 768px) {
  .steps-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 1024px) {
  .steps-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

.step-card {
  background: var(--card-bg);
  border: 1px solid var(--border-subtle);
  border-radius: 16px;
  padding: 32px 24px;
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.step-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: linear-gradient(90deg, transparent, var(--lavender), transparent);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.step-card:hover {
  background: var(--card-hover);
  transform: translateY(-4px);
  border-color: var(--border-light);
}

.step-card:hover::before {
  opacity: 1;
}

.step-card:nth-child(1) .step-number { background: var(--orange-soft); color: var(--orange); }
.step-card:nth-child(2) .step-number { background: var(--purple-soft); color: var(--purple); }
.step-card:nth-child(3) .step-number { background: var(--teal-soft); color: var(--teal); }
.step-card:nth-child(4) .step-number { background: var(--pink-soft); color: var(--pink); }

/* Step Card Emoji Animations */
.step-emojis {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  opacity: 0;
  transition: opacity 0.4s ease;
  overflow: hidden;
  border-radius: 16px;
}

.step-card:hover .step-emojis {
  opacity: 1;
}

.step-emojis .emoji {
  position: absolute;
  font-size: 1.8rem;
  opacity: 0;
  filter: drop-shadow(0 0 8px rgba(255,255,255,0.3));
}

.step-card:hover .emoji {
  animation: emojiFloat 2s ease-in-out infinite;
}

.step-card:hover .emoji-1 {
  top: 15%;
  left: 10%;
  animation-delay: 0s;
}

.step-card:hover .emoji-2 {
  top: 20%;
  right: 15%;
  animation-delay: 0.3s;
}

.step-card:hover .emoji-3 {
  bottom: 25%;
  left: 15%;
  animation-delay: 0.6s;
}

.step-card:hover .emoji-4 {
  bottom: 20%;
  right: 10%;
  animation-delay: 0.9s;
}

@keyframes emojiFloat {
  0% {
    opacity: 0;
    transform: translateY(20px) scale(0.5) rotate(-10deg);
  }
  20% {
    opacity: 1;
    transform: translateY(0) scale(1) rotate(0deg);
  }
  80% {
    opacity: 1;
    transform: translateY(-10px) scale(1.1) rotate(5deg);
  }
  100% {
    opacity: 0;
    transform: translateY(-30px) scale(0.8) rotate(-5deg);
  }
}

/* Colorful Step Card Backgrounds on Hover */
.step-card:nth-child(1):hover {
  background: linear-gradient(135deg, rgba(253, 186, 116, 0.15) 0%, rgba(251, 146, 60, 0.08) 100%);
  border-color: rgba(253, 186, 116, 0.4);
  box-shadow: 0 8px 32px rgba(253, 186, 116, 0.2);
}

.step-card:nth-child(2):hover {
  background: linear-gradient(135deg, rgba(196, 181, 253, 0.15) 0%, rgba(167, 139, 250, 0.08) 100%);
  border-color: rgba(196, 181, 253, 0.4);
  box-shadow: 0 8px 32px rgba(196, 181, 253, 0.2);
}

.step-card:nth-child(3):hover {
  background: linear-gradient(135deg, rgba(94, 234, 212, 0.15) 0%, rgba(45, 212, 191, 0.08) 100%);
  border-color: rgba(94, 234, 212, 0.4);
  box-shadow: 0 8px 32px rgba(94, 234, 212, 0.2);
}

.step-card:nth-child(4):hover {
  background: linear-gradient(135deg, rgba(249, 168, 212, 0.15) 0%, rgba(244, 114, 182, 0.08) 100%);
  border-color: rgba(249, 168, 212, 0.4);
  box-shadow: 0 8px 32px rgba(249, 168, 212, 0.2);
}

/* Colorful Glow Effect on Hover */
.step-card:nth-child(1)::after {
  content: '';
  position: absolute;
  inset: -2px;
  background: linear-gradient(135deg, var(--orange), var(--yellow));
  border-radius: 18px;
  z-index: -1;
  opacity: 0;
  transition: opacity 0.3s ease;
  filter: blur(12px);
}

.step-card:nth-child(2)::after {
  content: '';
  position: absolute;
  inset: -2px;
  background: linear-gradient(135deg, var(--purple), var(--lavender));
  border-radius: 18px;
  z-index: -1;
  opacity: 0;
  transition: opacity 0.3s ease;
  filter: blur(12px);
}

.step-card:nth-child(3)::after {
  content: '';
  position: absolute;
  inset: -2px;
  background: linear-gradient(135deg, var(--teal), #34d399);
  border-radius: 18px;
  z-index: -1;
  opacity: 0;
  transition: opacity 0.3s ease;
  filter: blur(12px);
}

.step-card:nth-child(4)::after {
  content: '';
  position: absolute;
  inset: -2px;
  background: linear-gradient(135deg, var(--pink), #f472b6);
  border-radius: 18px;
  z-index: -1;
  opacity: 0;
  transition: opacity 0.3s ease;
  filter: blur(12px);
}

.step-card:hover::after {
  opacity: 0.3;
}

.step-number {
  width: 48px;
  height: 48px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 1.1rem;
  margin: 0 auto 20px;
}

.step-icon {
  width: 40px;
  height: 40px;
  margin: 0 auto 16px;
  opacity: 0.9;
}

.step-card h3 {
  font-size: 1.1rem;
  font-weight: 600;
  margin-bottom: 12px;
}

.step-card p {
  color: var(--text-secondary);
  font-size: 0.9rem;
  line-height: 1.6;
}

/* Features Section */
.features {
  background: linear-gradient(180deg, var(--navy) 0%, var(--navy-dark) 100%);
  position: relative;
}

.features::before {
  content: '';
  position: absolute;
  inset: 0;
  background: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
  opacity: 0.02;
  pointer-events: none;
}

.features-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 20px;
}

@media (min-width: 768px) {
  .features-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

.feature-card {
  background: linear-gradient(135deg, rgba(255,255,255,0.04) 0%, rgba(255,255,255,0.01) 100%);
  border: 1px solid var(--border-subtle);
  border-radius: 16px;
  padding: 28px;
  display: flex;
  gap: 20px;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.feature-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.feature-card:nth-child(1)::before { background: linear-gradient(90deg, transparent, var(--lavender), transparent); }
.feature-card:nth-child(2)::before { background: linear-gradient(90deg, transparent, var(--teal), transparent); }
.feature-card:nth-child(3)::before { background: linear-gradient(90deg, transparent, var(--orange), transparent); }
.feature-card:nth-child(4)::before { background: linear-gradient(90deg, transparent, var(--pink), transparent); }

.feature-card:nth-child(1) { background: linear-gradient(135deg, rgba(167,139,250,0.08) 0%, rgba(167,139,250,0.02) 100%); }
.feature-card:nth-child(2) { background: linear-gradient(135deg, rgba(94,234,212,0.08) 0%, rgba(94,234,212,0.02) 100%); }
.feature-card:nth-child(3) { background: linear-gradient(135deg, rgba(253,186,116,0.08) 0%, rgba(253,186,116,0.02) 100%); }
.feature-card:nth-child(4) { background: linear-gradient(135deg, rgba(249,168,212,0.08) 0%, rgba(249,168,212,0.02) 100%); }

.feature-card:hover {
  transform: translateY(-4px);
  border-color: var(--border-light);
}

.feature-card:hover::before {
  opacity: 1;
}

.feature-card:nth-child(1):hover { box-shadow: 0 8px 32px rgba(167,139,250,0.15); }
.feature-card:nth-child(2):hover { box-shadow: 0 8px 32px rgba(94,234,212,0.15); }
.feature-card:nth-child(3):hover { box-shadow: 0 8px 32px rgba(253,186,116,0.15); }
.feature-card:nth-child(4):hover { box-shadow: 0 8px 32px rgba(249,168,212,0.15); }

.feature-icon {
  width: 48px;
  height: 48px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  position: relative;
}

.feature-icon svg {
  width: 24px;
  height: 24px;
  position: relative;
  z-index: 1;
}

.feature-card:nth-child(1) .feature-icon { 
  background: var(--lavender-soft); 
  box-shadow: 0 0 20px rgba(167,139,250,0.3), inset 0 0 20px rgba(167,139,250,0.1);
}
.feature-card:nth-child(1) .feature-icon svg { color: var(--lavender); }
.feature-card:nth-child(2) .feature-icon { 
  background: var(--teal-soft); 
  box-shadow: 0 0 20px rgba(94,234,212,0.3), inset 0 0 20px rgba(94,234,212,0.1);
}
.feature-card:nth-child(2) .feature-icon svg { color: var(--teal); }
.feature-card:nth-child(3) .feature-icon { 
  background: var(--orange-soft); 
  box-shadow: 0 0 20px rgba(253,186,116,0.3), inset 0 0 20px rgba(253,186,116,0.1);
}
.feature-card:nth-child(3) .feature-icon svg { color: var(--orange); }
.feature-card:nth-child(4) .feature-icon { 
  background: var(--pink-soft); 
  box-shadow: 0 0 20px rgba(249,168,212,0.3), inset 0 0 20px rgba(249,168,212,0.1);
}
.feature-card:nth-child(4) .feature-icon svg { color: var(--pink); }

.feature-content h3 {
  font-size: 1.1rem;
  font-weight: 600;
  margin-bottom: 8px;
}

.feature-content p {
  color: var(--text-secondary);
  font-size: 0.9rem;
  line-height: 1.6;
}

/* Explore by Mood */
.explore-moods {
  background: linear-gradient(180deg, #1a0a2e 0%, #16213e 50%, #0f0c29 100%);
  position: relative;
  overflow: hidden;
}

.explore-moods::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: linear-gradient(90deg, transparent, var(--pink), var(--lavender), var(--teal), transparent);
}

.explore-moods::after {
  content: '';
  position: absolute;
  inset: 0;
  background: 
    radial-gradient(circle at 15% 50%, rgba(244, 114, 182, 0.15) 0%, transparent 30%),
    radial-gradient(circle at 85% 30%, rgba(94, 234, 212, 0.12) 0%, transparent 30%),
    radial-gradient(circle at 50% 80%, rgba(167, 139, 250, 0.1) 0%, transparent 30%);
  pointer-events: none;
  animation: moodBgPulse 8s ease-in-out infinite;
}

@keyframes moodBgPulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.6; }
}

.moods-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16px;
}

@media (min-width: 640px) {
  .moods-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (min-width: 1024px) {
  .moods-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

.mood-card {
  background: rgba(255, 255, 255, 0.05);
  border: 2px solid transparent;
  border-radius: 20px;
  padding: 28px 20px;
  text-align: center;
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

.mood-card::before {
  content: '';
  position: absolute;
  inset: 0;
  opacity: 0.8;
  transition: opacity 0.3s ease;
  border-radius: 18px;
}

.mood-card:hover {
  transform: translateY(-8px) scale(1.02);
}

.mood-card:hover::before {
  opacity: 1;
}

